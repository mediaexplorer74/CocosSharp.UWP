        <Import file    ="MonoDevelop.CocosSharp.Forms/iOS.Forms/Icon-Small-40@2x.png" />
        <Import file    ="MonoDevelop.CocosSharp.Forms/iOS.Forms/Icon-Small-40@3x.png" />
        <Import file    ="MonoDevelop.CocosSharp.Forms/iOS.Forms/Icon-Small.png" />
        <Import file    ="MonoDevelop.CocosSharp.Forms/iOS.Forms/Icon-Small@2x.png" />
        <Import file    ="MonoDevelop.CocosSharp.Forms/iOS.Forms/Icon-Small@3x.png" />
        <Import file    ="MonoDevelop.CocosSharp.Forms/iOS.Forms/Info_Universal.plist.xml" />
        <Import file    ="MonoDevelop.CocosSharp.Forms/iOS.Forms/ITunesArtwork" />

        <!---PCL Mobile files -->
        <Import file    ="MonoDevelop.CocosSharp.Mobile/SingleWindowed.Mobile/MonoDevelop.CocosSharp.Mobile.MobileProject.xpt.xml" />
        <Import file    ="MonoDevelop.CocosSharp.Mobile/Empty.Mobile/MonoDevelop.CocosSharp.Mobile.EmptyProject.xpt.xml" />


        <!---Xamarin.Forms files -->
        <Import file    ="MonoDevelop.CocosSharp.Forms/Empty.Forms/MonoDevelop.CocosSharp.Forms.EmptyProject.xpt.xml" />
        <Import file    ="MonoDevelop.CocosSharp.Forms/Showcase.Forms/MonoDevelop.CocosSharp.Forms.ShowcaseProject.xpt.xml" />

        <Import file    ="MonoDevelop.CocosSharp.Forms/Android.Forms/AboutAssets.txt" />
        <Import file    ="MonoDevelop.CocosSharp.Forms/Android.Forms/AboutResources.txt" />
        <Import file    ="MonoDevelop.CocosSharp.Forms/Android.Forms/AndroidManifest.xml" />
